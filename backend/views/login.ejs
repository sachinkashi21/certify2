<% layout("layout/boilerplate.ejs", { user: user }) %>

<div class="login-container">
  <form class="login-box" action="/login" method="post">
    <h1 class="login-title">Login to C3RTiFY</h1>
    
    <div class="input-container">
      <input type="text" name="email" id="email" placeholder="Email" class="input-field" required>
      <input type="password" name="password" id="password" placeholder="Password" class="input-field" required>
      <input type="submit" id="login-btn" value="Login" class="btn-login">
    </div>
    
    <div class="login-links">
      <a href="/forgot-password" class="forgot-password-link">Forgot Password?</a>
      <span class="separator">|</span>
      <a href="/signup" class="signup-link">Create an Account</a>
    </div>
  </form>
</div>

<style>
  /* Overall container styling */
  .login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    background-color: #f0f4f8;
    padding: 20px;
  }

  /* Login box styling */
  .login-box {
    background-color: white;
    border-radius: 10px;
    padding: 30px;
    width: 100%;
    max-width: 400px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .login-title {
    font-size: 2rem;
    margin-bottom: 20px;
    color: #264653;
  }

  /* Input field styling */
  .input-container {
    margin-bottom: 20px;
  }

  .input-field {
    width: 100%;
    padding: 15px;
    margin: 10px 0;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 1rem;
  }

  .input-field:focus {
    outline: none;
    border-color: #2a9d8f;
    box-shadow: 0 0 5px rgba(42, 157, 143, 0.3);
  }

  /* Button styling */
  .btn-login {
    width: 100%;
    background-color: #2a9d8f;
    color: white;
    padding: 15px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
    transition: background-color 0.3s ease;
  }

  .btn-login:hover {
    background-color: #21867a;
  }

  /* Additional links */
  .login-links {
    margin-top: 15px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .forgot-password-link, .signup-link {
    text-decoration: none;
    color: #264653;
    font-size: 0.9rem;
  }

  .forgot-password-link:hover, .signup-link:hover {
    text-decoration: underline;
  }

  .separator {
    margin: 0 10px;
    color: #ccc;
  }
</style>
