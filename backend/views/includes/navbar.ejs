<div class="navbar">
    <h1 class="nav-left">
      <a href="/" class="logo">C3RTiFY</a>
    </h1>
    <div class="nav-right">
      <% if (user) { %>
        <p class="welcome-text">Welcome, <%= user.name %>!</p>
        <% if (user.role === 'student') { %>
          <h4>
            <a href="/student/dashboard/<%= user.uid %>" class="nav-link">Student Dashboard</a>
          </h4>
        <% } else if (user.role === 'institute' || user.email === process.env.instemail) { %>
          <h4>
            <a href="/institute/dashboard/<%= user.uid %>" class="nav-link">Dashboard</a>
          </h4>
          <a href="/issuenew" class="nav-link">Issue New Certificate</a>
        <% } %>
        <form action="/logout" method="POST" class="logout-form">
          <button class="nav-link logout-btn" type="submit">Logout</button>
        </form>
      <% } else { %>
        <a class="nav-link" href="/signup">Sign-Up</a>
        <a class="nav-link" href="/login">Log-In</a>
      <% } %>
    </div>
  </div>
  
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f5f6fa;
      color: #333;
      margin: 0;
      padding: 0;
    }
  
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #2a9d8f;
      padding: 1rem 2rem;
      box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }
  
    .logo {
      font-size: 1.8rem;
      font-weight: bold;
      color: #fff;
    }
  
    .nav-right {
      display: flex;
      align-items: center;
      gap: 1.5rem;
    }
  
    .nav-link {
      color: #fff;
      font-weight: 500;
      text-decoration: none;
      padding: 0.5rem 1rem;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }
  
    .nav-link:hover {
      background-color: #264653;
    }
  
    .welcome-text {
      margin-right: 1rem;
      color: #e9c46a;
      font-weight: bold;
    }
  
    .logout-form {
      display: inline-block;
    }
  
    .logout-btn {
      background-color: #e76f51;
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
  
    .logout-btn:hover {
      background-color: #c4452e;
    }
  
    @media (max-width: 768px) {
      .navbar {
        flex-direction: column;
      }
  
      .nav-right {
        flex-direction: column;
        gap: 1rem;
      }
  
      .nav-link {
        padding: 0.5rem 0.8rem;
      }
    }
  </style>
  